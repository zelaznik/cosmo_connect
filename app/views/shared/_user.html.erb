<center>
  <h1><%= header %></h1>
  <form action="<%= url %>" method="post">
    <%= auth_token %>

    <p><label>
      Username
      <input type="text" name="user[username]" value="<%= @user.username %>">
    </label></p>

    <p><label>
      Password
      <input type="password" name="user[password]" value="">
    </label></p>

    <input type="submit" value="<%= submit %>">
  </form>
</center>
