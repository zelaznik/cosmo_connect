<td>
  <label><%= snakeToCapitalized(id) %></label>
</td>
<td class="details-item-value">
  <% if (user.id != Cosmo.CURRENT_USER_ID) { %>
    <%= value || '(unspecified)' %>
  <% } else { %>
    <% if (editMode) { %>
      <select name="<%= id.toLowerCase() %>">
        <% var unspecified = true; %>
        <% value.forEach(function(v) { %>
          <% if (v.selected) {unspecified=false;} %>
        <% }); %>
        <% if (unspecified) { %>
          <option class="new-user-input-item" value="null" selected>(unspecified)</option>
        <% } else { %>
          <option class="new-user-input-item" value="null">(unspecified)</option>
        <% }%>
        <% value.forEach(function(v) { %>
          <% if (v.selected) { %>
            <option class="new-user-input-item" value="<%= v.id %>" selected><%= v.name %></option>
          <% } else { %>
            <option class="new-user-input-item" value="<%= v.id %>"><%= v.name %></option>
          <% } %>
        <% }) %>
      </select>
    <% } else { %>
      <% var name = '(unspecified)' %>
      <% value.forEach(function(v) { %>
        <% if (v.selected) { %>
          <% name = v.name; %>
        <% } %>
      <% }) %>
      &nbsp;<%= name %>&nbsp;
      <a class="user-details-edit-icon" data-toggle="modal" data-target="#myModal">
        <span class="edit-glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </a>
    <% } %>
  <% } %>

</td>
