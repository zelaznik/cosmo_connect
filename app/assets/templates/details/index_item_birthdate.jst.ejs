<tr id="user-info-birthdate">
  <td>
    <label>Date Of Birth</label>
  </td>
  <td class="details-item-value">
    <% if (editMode) { %>
      <form>
        <input class="new-user-input-item" type="year" placeholder="YYYY" name="birthdate[year]" value="<%= value.year %>">
        <input class="new-user-input-item" type="text" placeholder="MM" name="birthdate[month]" value="<%= value.month %>">
        <input class="new-user-input-item" type="text" placeholder="DD" name="birthdate[day]" value="<%= value.day %>">
        <i class="icon-large icon-ok"></i>
      </form>
    <% } else { %>
        &nbsp;<span><%= value.day + '/' + value.month + '/' + value.year %></span>
        <% if (user.isCurrentUser) { %>
          <a class="essay-edit" data-toggle="modal" data-target="#myModal">
            <span class="edit-glyphicon glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>&nbsp;
        <% } %>
    <% } %>
  </td>
</tr>
