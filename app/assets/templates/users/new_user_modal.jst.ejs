<div class='modal-background'></div>

<!-- Modal content-->
<div class="new-user-modal modal-content">
  <form id="new-user-info">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h2 class="modal-title">Welcome!</h2>
    </div>

    <div class="modal-body">
      <h4>Before we continue, please fill out these quick questions.</h4>
      <h4>This is crucial in order for us to find you a match.</h4>

        <h3>
          <div id="user-info-birthdate">
            <label>Date Of Birth</label>
            <input class="new-user-input-item" type="year" placeholder="YYYY" name="birthdate[year]">
            <input class="new-user-input-item" type="text" placeholder="MM" name="birthdate[month]">
            <input class="new-user-input-item" type="text" placeholder="DD" name="birthdate[day]">
          </div>

          <div id="user-info-gender">
            <label>Gender</label>
            <span class="new-user-input-item gender_identity">
              <input type="radio" name="gender_identity" value="1">&nbsp;man
            </span>
            <span class="new-user-input-item">
              <input type="radio" name="gender_identity" value="2">&nbsp;woman
            </span>
            <span class="new-user-input-item">
              <input type="radio" name="gender_identity" value="3">&nbsp;other
            </span>
          </div>

          <div id="user-info-interested-in">
            <label>Interested In</label>
            <span class="new-user-input-item gender_interest">
              <input type="checkbox" name="gender_interest" value="1">&nbsp;men
            </span>
            <span class="new-user-input-item">
              <input type="checkbox" name="gender_interest" value="2">&nbsp;women
            </span>
            <span class="new-user-input-item">
              <input type="checkbox" name="gender_interest" value="3">&nbsp;other
            </span>
          </div>

        <div id="user-info-age-range">
          <h3><label>Ages</label>
            <input class="new-user-input-item" type="text" placeholder="YY" id="min_age" name="min_age">
            <span> to </span>
            <input class="new-user-input-item" type="text" placeholder="YY" id="max_age" name="max_age">
          </h3>
        </div>

      </div> <!-- End .modal-body -->

      <div class="modal-footer">
          <button type="submit" class="btn btn-default btn-primary" data-dismiss="modal">Continue</button>
      </div>
  </form>
</div> <!-- End .modal-content -->
