<div class="container user-profile">
    <div class="row">
      <div class="col-md-2">
        <a href="<%= '#users/' + user.escape('id') %>" class="thumbnail">
          <img
            width=100px height=100px
            src="<%= '/images/tmp/' + user.escape('id') + '.jpg' %>"
            alt="<%= 'Profile pic for user: ' + user.escape('username') %>'"
          ></a>
      </div> <!-- End Thumbnail -->

      <div class="col-md-10">
        <% if (!user.isCurrentUser) { %>
          <div class="container">
            <div class="row">
              <div class="col-md-6">
              <% if (user.like().isNew()) { %>
                <button class="toggle">Like</button>
              <% } else { %>
                <button class="toggle">Unlike</button>
              <% } %>
              <div class="col-md-6">
                <button id='send-message'>Send Message</button>
              </div>
            </div>
          </div>
        <% } %>

        <div class="row">
          <h3 valign="left">
            <%= user.escape('username') %>
          </h3>
        </div>
        <% if (user.isCurrentUser) { %>
          <h3>
            <% if (user.get('genders')) { %>
              <select id="gender" action="">
                <% if (user.get('gender_id')) { %>
                  <option disabled="true">Select Gender</option>
                <% } else { %>
                  <option disabled="true" selected=true>Select Gender</option>
                <% } %>
                <% user.get('genders').forEach(function(gender) { %>
                  <option
                    value="<%= gender.id %>"
                    <% if (user.get('gender_id') === gender.id) { %>
                      <%= "selected=true" %>
                    <% } %>>
                  <%= gender.singular %></option>
                <% }) %>
              </select>

              <form id="desired-genders" action="">
                <input type="checkbox" name="gender_id" value="1">Men<br>
                <input type="checkbox" name="gender_id" value="2">Women<br>
              </form>

            <% } else { %> <!-- If not current user -->
              <%= user.escape('gender') %>
            <% } %>

            &middot;

            <form id="birthdate">
              Year: <input type="number" name="year" value="<%= user.birthdate().year %>">
              Month: <input type="number" name="month" value="<%= user.birthdate().month %>">
              Day: <input type="number" name="day" value="<%= user.birthdate().day %>">
              <input type="submit" value="Update Birthdate">
            </form>
          </h3>

        <% } else { %>
          <h3 valign="left">
            <%= user.escape('gender') + ' &middot; ' + (user.get('age') ? user.escape('age') : '(age unknown)') %>
          </h3>
        <% } %>

      </div> <!-- End User Details -->

    </div> <!-- End Profile First Row -->

    <div class="row">
      <div class="response-index col-md-8">
      </div>
      <div class="col-md-4">
        <h2>Attributes</h2>
      </div>
    </div> <!-- End Profile Second Row (Essays and Attributes) -->

</div>
