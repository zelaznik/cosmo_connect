<div class="container user-profile">
    <div class="user-preview"></div>
    <div class="row">
      <div class="col-md-10">
        <% if (user.isCurrentUser) { %>
          <h3>
            <% if (user.get('genders')) { %>
              <select id="gender" action="">
                <% if (user.get('gender_id')) { %>
                  <option disabled="true">Select Gender</option>
                <% } else { %>
                  <option disabled="true" selected=true>Select Gender</option>
                <% } %>
                <% user.get('genders').forEach(function(gender) { %>
                  <option
                    value="<%= gender.id %>"
                    <% if (user.get('gender_id') === gender.id) { %>
                      <%= "selected=true" %>
                    <% } %>>
                  <%= gender.singular %></option>
                <% }) %>
              </select>

              <form id="desired-genders" action="">
                <input type="checkbox" name="gender_id" value="1">Men<br>
                <input type="checkbox" name="gender_id" value="2">Women<br>
              </form>
            <% } %>

          </h3>

        <% } %>

      </div> <!-- End User Details -->

    </div> <!-- End Profile First Row -->

    <div class="row">
      <div class="response-index col-md-6"></div>
      <div class="col-md-6 user-attributes">
        <center><h2>Attributes</h2></center>
        <% if (user.isCurrentUser) { %>
          <div class="row">
            <form id="birthdate">
              <button class="btn btn-primary" type="submit">Update Birthdate</button>
              Year: <input type="number" name="year" value="<%= user.birthdate().year %>">
              Month: <input type="number" name="month" value="<%= user.birthdate().month %>">
              Day: <input type="number" name="day" value="<%= user.birthdate().day %>">
            </form>
          </div>
          <br>
          <div class="row">
            <form id="gender">
              <button class="btn btn-primary" type="submit">Update Gender</button>
            </form>
          </div>

        <% } %>
      </div>
    </div> <!-- End Profile Second Row (Essays and Attributes) -->

</div>
