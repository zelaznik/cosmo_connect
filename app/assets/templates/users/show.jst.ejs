<div class="container user-profile">
    <div class="row">
      <div class="col-xs-3 col-md-2">
        <a href="#" class="thumbnail">
          <img
            width=100px height=100px
            src="<%= 'images/tmp/' + user.escape('id') + '.jpg' %>"
            alt="<%= 'Profile pic for user: ' + user.escape('username') %>'"
          ></a>
      </div> <!-- End Thumbnail -->

      <div class="col-xs-6">
        <h3 valign="center">
          <%= 'Username: ' + user.escape('username') %>
        </h3>
        <h3 valign="center">
          <%= 'Sex: ' + user.escape('gender') + ', Age: ' + user.escape('age') %>
        </h3>
      </div>

    </div> <!-- End Profile First Row -->

    <div class="row">
      <div class="response-index col-xs-6 col-md-4">
      </div>
      <div class="col-xs-6 col-md-4">
        <h2>Attributes</h2>
      </div>
    </div> <!-- End Profile Second Row (Essays and Attributes) -->

</div>
